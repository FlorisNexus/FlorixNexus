{
  "name": "florisnexus-showcase",
  "version": "1.0.15",
  "description": "Site vitrine pour FlorisNexus",
  "main": "index.html",
  "scripts": {
    "dev": "concurrently \"tailwind.exe -i ./src/input.css -o ./dist/style.css --watch\" \"browser-sync start --server --files 'index.html, dist/*.css, src/js/*.js'\"",
    "build": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/style.css --minify",
    "check-seo": "npx lighthouse https://florisnexus.com --view"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^8.2.2",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0"
  }
}
